<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Image</th>
      <th>Description</th>
      <th>Amazon product url</th>
      <th>Age group</th>
      <th>Rank</th>
      <th>Weeks on list</th>
      <th>Primary isbn10</th>
      <th>Primary isbn13</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.image %></td>
        <td><%= book.description %></td>
        <td><%= book.amazon_product_url %></td>
        <td><%= book.age_group %></td>
        <td><%= book.rank %></td>
        <td><%= book.weeks_on_list %></td>
        <td><%= book.primary_isbn10 %></td>
        <td><%= book.primary_isbn13 %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
